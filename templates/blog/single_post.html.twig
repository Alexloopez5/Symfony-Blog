{% extends 'base.html.twig' %}


{% block title %}Post
{% endblock %}

{% block body %}
	<!-- Principal Content Start -->
	<div id="blog" style="color: black;">
		<div id="single">
			<div class="container">
				{% if not post %}
					<h2>Post not found</h2>
				{% else %}
					<!-- Full Article -->
					<div class="row">
						<h2>{{ post.title }}</h2>
						<hr class="subtitle">
						<div class="block1">
							<div class="col-xs-12 col-sm-9">
								<div class="post-heading">
									<img class="img-responsive" src="{{ asset('images/index/gallery/' ~ post.image) }}" alt="{{ post.title }}">
								</div>
								<p>
									{{ post.content }}
								</p>
								<h4>- By
									{{ post.user.name }}</h4>
								{# <hr> #}
								<ul class="list-inline">
									<li>{{ post.publishedAt | date('d') }}
										{{ post.publishedAt | date('F') }}</li>
									<li>
										<a class="page-scroll" href="#form">COMMENT</a>
										<i class="fa fa-comments sr-icons">{{ post.NumComments }}</i>
									</li>
									<li>
										<a href="{{ path('post_like', {slug: post.slug}) }}">LIKE</a>
										|
										<i class="fa fa-heart sr-icons">{{ post.NumLikes }}</i>
									</li>
								</ul>
							</div>
							<div class="col-xs-12 col-sm-3">
								<h3>Recent Posts</h3>
								<hr><br>
								{% if recentposts %}
									{% for post in recentposts %}
										{{ include ("partials/recent_post.html.twig", {'post': post}) }}
									{% endfor %}
								{% else %}
									<p>No se han encontrado posts</p>
								{% endif %}
							</div>
							<div class="row">
								{<div class="col-xs-12 col-sm-12 block2">
									{% for comment in post.comments %}
										{{ include ('partials/comment.html.twig', {'comment': comment}) }}
									{% endfor %}
									<hr class="line">
									{{ include ('partials/form_comment.html.twig') }}
								</div>
							</div>
							}
						</div>
					</div>
				</div>
				<!-- End of Full Article -->
			{% endif %}
		</div>
	</div>
	<!-- End of Principal Content Start -->
</div>{% endblock %}
